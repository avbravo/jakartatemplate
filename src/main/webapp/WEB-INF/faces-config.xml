<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_3_0.xsd"
    version="3.0"
>
    <factory>
        <exception-handler-factory>com.avbravo.jakartatemplate.config.DefaultExceptionHandlerFactory</exception-handler-factory>
    </factory>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>es</supported-locale>
            <supported-locale>es_ES</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>application</base-name>
            <var>app</var>
        </resource-bundle>
    </application>

    <lifecycle>
        <phase-listener>com.avbravo.jakartatemplate.config.MessageHandler</phase-listener>
        <phase-listener>com.avbravo.jakartatemplate..config.RequestLoggingPhaseListener</phase-listener>
    </lifecycle>
</faces-config>